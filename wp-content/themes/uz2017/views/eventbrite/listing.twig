{% extends "base.twig" %}
{% set body_class = 'page-eventbrite listing' %}

{% block content %}	
	<div class="container">
	<h1>Events</h1>
	<div class="eventbrite-events">
		{% for event in events %}
			<a class="eventbrite-event" href="{{ function('get_the_permalink',event.id ) }}/{{ function('basename', event.url)}}">
				<div class="event-image">
					<img src="{{ event.logo_url }}" alt="{{ event.post_title }}"/>
				</div>
				<div class="event-info">	
					<span class="event-date">
						<span class="event-month">{{ event.start.local | format_date('F') }}</span>
						<span class="event-day">{{ event.start.local | format_date('d') }}</span>
					</span>
					<div class="event-details">
						<h2>{{ event.post_title }}</h2>
						<div class="event-time">{{ event.start.local | format_date('l, M d, g:ia') }}</div>
						<div class="event-place">{{ event.venue.address.localized_area_display }}</div>
					</div>
					
				</div>
				{% include 'eventbrite/event-schema.twig' %}
			</a>
		{% endfor %}
	</div>
	</div>
{% endblock %}{# end content #}